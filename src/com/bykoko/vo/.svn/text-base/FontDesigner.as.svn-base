package com.bykoko.vo
{
	import flash.text.Font;

	//Class to collect all the available typefaces of a family font.
	public class FontDesigner
	{
		public var font:Font;
		public var regular:Boolean = true;
		
		[Bindable]
		public var bold:Boolean = false;
		
		[Bindable]
		public var italic:Boolean = false;

		[Bindable]
		public var boldItalic:Boolean = false;
		
		[Bindable]
		public var fontName:String;
		
		public function FontDesigner(font:Font)
		{
			this.font = font;
			fontName = font.fontName;
		}
	}
}