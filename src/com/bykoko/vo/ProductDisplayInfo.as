	//As these images are shown in greyscale by the itemRenderers and are used as a 
	//menu to get access to the diferent displays, the image URL is populated with 
	//the first size of first color of a product
	public class ProductDisplayInfo
	{
		public var id:String;
		[Bindable]
		public var position:Posicion;
		public var imageURL:String;
	}
}