<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin minWidth="21" 
			 minHeight="21" 
			 alpha.disabled="0.5"
			 xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009" >
    
	<fx:Metadata>
		/*[HostComponent("spark.components.ToggleButton")]*/
		[HostComponent("spark.components.ButtonBarButton")]
	</fx:Metadata>
	
	
	<fx:Script>
		<![CDATA[
			import com.bykoko.vo.xmlmapping.product.Talla;
			
			import mx.events.FlexEvent;
			
			import spark.components.ButtonBar;
			import spark.components.ButtonBarButton;
			
			
			
			/* Define the skin elements that should not be colorized. 
			For toggle button, the graphics are colorized but the label is not. */
			static private const exclusions:Array = [];
			
			override public function get colorizeExclusions():Array 
			{
				return exclusions;
			}
			
		]]>
	</fx:Script>
	
	<!-- Estados -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over" stateGroups="overStates"/>
		<s:State name="down" stateGroups="downStates"/>
		<s:State name="disabled" stateGroups="disabledStates"/>
		<s:State name="upAndSelected" stateGroups="selectedStates" />
		<s:State name="overAndSelected" stateGroups="selectedStates" />
		<s:State name="downAndSelected" stateGroups="selectedStates" />
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>
	
	<s:filters>
		<s:DropShadowFilter alpha="0.7"
							angle="90"
							blurX="2"
							blurY="2"
							quality="2"
							color="0x333333"
							distance="1"
							inner="true"/>
		<s:DropShadowFilter alpha="1"
							angle="90"
							blurX="2"
							blurY="2"
							strength="3"
							quality="2"
							color="0xffffff"
							distance="1"
							inner="false">
		</s:DropShadowFilter>
	</s:filters>
		
	<!-- GrÃ¡ficos -->
	<s:Rect id="background" width="27" 
							height="27" 
							radiusX="4"
							radiusY="4">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color.selectedStates="0xFF623B"
								 color.overStates="0xFF623B"
								 color.down="0xFF623B"
								 color.up="0xA8B2B3"/>
				<s:GradientEntry color.selectedStates="0xDC2E08"
								 color.overStates="0xDC2E08"
								 color.down="0xFF623B"
								 color.up="0x818D8E"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 text="{(hostComponent.data as Talla).name.toUpperCase()}"
			 styleName="productColorButtonBar"
			 verticalAlign="middle"
			 maxDisplayedLines="1"
			 horizontalCenter="0" 
			 verticalCenter="1"
			 width="100%" 
			 top="2" 
			 bottom="2">
	</s:Label>
	
	<!-- transiciones -->
	<!--s:transitions>
		<s:Transition>
			<s:CrossFade target="{labelDisplay}" duration="100"/>
		</s:Transition>
	</s:transitions-->
</s:SparkSkin>
